<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
  <% @list.bookmarks.each do |bookmark|%>
    <%= bookmark.movie.title %>
  <% end %>
</div>

<div>
    <h1>Comments</h1>
  <div class="comments">
    <% @list.bookmarks.each do |b|%>
      <li><%= b.comment %></li>
      <%= link_to "delete", b, data: {turbo_method: :delete} %>
    <% end %>
  </div>

<div class= "btn_blue">
    <%= link_to "Back to the lists", lists_path, class: "btn btn-primary mx-4"%>
    <a class="btn btn-ghost" href="#"><%= link_to "Create a new bookmark", new_list_bookmark_path(@list), class: "btn btn-primary mx-4"%></a>
</div>
